# EditorConfig (http://editorconfig.org/)
root = true

# Default Code Style
[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = tab
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.{c,h}]
indent_size = 4
indent_style = tab
tab_width = 4

[*.{cpp,cc,hpp}]
indent_size = 4
indent_style = tab
tab_width = 4

# https://docs.microsoft.com/en-us/visualstudio/ide/editorconfig-code-style-settings-reference
[*.cs]
charset = utf-8
csharp_style_var_for_built_in_types = true:warning
csharp_style_var_when_type_is_apparent = true:warning
csharp_style_var_elsewhere = true:warning
csharp_style_expression_bodied_methods = false:warning
csharp_style_expression_bodied_constructors = false:warning
csharp_style_expression_bodied_operators = false:warning
csharp_style_expression_bodied_properties = false:warning
csharp_style_expression_bodied_indexers = false:warning
csharp_style_expression_bodied_accessors = false:warning
csharp_style_pattern_matching_over_is_with_cast_check = true:warning
csharp_style_pattern_matching_over_as_with_null_check = true:warning
csharp_style_inlined_variable_declaration = true:warning
csharp_style_throw_expression = true:warning
csharp_style_conditional_delegate_call = false:warning
dotnet_sort_system_directives_first = true:warning
dotnet_style_qualification_for_field = true:warning
dotnet_style_qualification_for_property = true:warning
dotnet_style_qualification_for_method = true:warning
dotnet_style_qualification_for_event = true:warning
dotnet_style_predefined_type_for_locals_parameters_members = true:warning
dotnet_style_predefined_type_for_member_access = true:warning
dotnet_style_object_initializer = true:warning
dotnet_style_collection_initializer = true:warning
dotnet_style_explicit_tuple_names = true:warning
dotnet_style_coalesce_expression = true:warning
dotnet_style_null_propagation = true:warning
end_of_line = crlf
indent_size = 4
indent_style = tab
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.java]
indent_size = 4
indent_style = tab
tab_width = 4

[*.js]
indent_size = 4
indent_style = tab

[*.json]
indent_size = 2
indent_style = tab
tab_width = 4

[*.py]
indent_size = 4
indent_style = tab
tab_width = 4

[*.ts]
indent_size = 2
indent_style = tab
tab_width = 4

### XML ###
[*.{axml,cshtml,csproj,html,props,svg,xaml,xhtml,xml}]
indent_size = 4
indent_style = tab
tab_width = 4

[*.yml]
indent_size = 2
indent_style = space

# https://docs.microsoft.com/en-us/visualstudio/ide/editorconfig-code-style-settings-reference
[*.vb]
dotnet_sort_system_directives_first = true:warning
dotnet_style_qualification_for_field = true:warning
dotnet_style_qualification_for_property = true:warning
dotnet_style_qualification_for_method = true:warning
dotnet_style_qualification_for_event = true:warning
dotnet_style_predefined_type_for_locals_parameters_members = true:warning
dotnet_style_predefined_type_for_member_access = true:warning
dotnet_style_object_initializer = true:warning
dotnet_style_collection_initializer = true:warning
dotnet_style_explicit_tuple_names = true:warning
dotnet_style_coalesce_expression = true:warning
dotnet_style_null_propagation = true:warning
