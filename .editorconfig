# EditorConfig (http://editorconfig.org/)
root = true

# Default Code Style
[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = tab
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.java]
indent_size = 4
indent_style = tab
tab_width = 4

[*.js]
indent_size = 4
indent_style = tab

[*.json]
indent_size = 2
indent_style = tab
tab_width = 4

[*.ts]
indent_size = 2
indent_style = tab
tab_width = 4

### XML ###
[*.{axml,cshtml,csproj,html,props,svg,xaml,xhtml,xml}]
indent_size = 4
indent_style = tab
tab_width = 4

[*.yml]
indent_size = 2
indent_style = space
